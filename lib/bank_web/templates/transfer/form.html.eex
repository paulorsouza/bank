<%= form_for @conn, @action, [class: "form-transfer"], fn f -> %>
  <%= if @errors do %>
    <div class="alert alert-danger">
      <%= if is_binary(@errors) do %>
        <p><%= @errors %></p>
      <% else %>
        <p>Oops, something went wrong!</p>
      <% end %>
    </div>
  <% end %>

  <%= label f, "To User" %>
  <%= text_input f, :username %>
  <%= error_tag @errors, :username %>

  <%= label f, "Value" %>
  <%= text_input f, :amount, type: :number, min: "0.01", step: "0.01" %>
  <%= error_tag @errors, :amount %>

  <div>
    <%= submit "Confirm" %>
  </div>
<% end %>